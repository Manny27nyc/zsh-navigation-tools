# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v-history` to .zshrc
#
# This function allows to browse Z shell's history and use the
# entries
#
# Uses v-list

emulate -L zsh

zmodload zsh/curses
local IFS="
"

local list
local result
local selected

VLIST_REMEMBER_STATE=0

list=( `history -rn 1000` )
list=( "${(@M)list:#*$1*}" )

if [ "$#list" -eq 0 ]; then
    echo "No matching history entries"
    return 1
fi

v-list result "${list[@]}"

if [ "$result" -gt 0 ]; then
    selected="$list[$result]"
    print -zr "$selected"
fi

# vim: set filetype=zsh:
