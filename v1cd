# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v1cd` to .zshrc
#
# This function allows to choose a directory from pushd stack
#
# Uses v1list

emulate -L zsh

zmodload zsh/curses
local IFS="
"

local list
local result
local selected

list=( `dirs -p` )
list2=( `dirs -pl` )
v1list result "${list[@]}"

if [ "$result" -gt 0 ]; then
    selected="$list2[$result]"
    echo "You have selected $selected"
    setopt NO_AUTO_PUSHD
    cd "$selected"
    setopt AUTO_PUSHD
fi

