# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v1env` to .zshrc
#
# This function allows to choose an environment variable
# for edition with vared
#
# Uses v1list

emulate -L zsh

zmodload zsh/curses

local IFS="
"

local list
local result
local selected

list=( `env` )
v1list result "$list[@]"

if [ "$result" -gt 0 ]; then
    selected="$list[$result]"
    selected="${selected%=*}"
    echo "Editing \`$selected':"
    vared "$selected"
fi

