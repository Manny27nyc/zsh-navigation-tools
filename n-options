# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v-options` to .zshrc
#
# This function allows to browse and toggle shell's options
#
# Uses n-list

#emulate -L zsh

zmodload zsh/curses
local IFS="
"

# TODO restore options
unsetopt localoptions
setopt kshoptionprint

local list
local selected
local option
local state

VLIST_REMEMBER_STATE=1
VLIST_FROM_WHAT_IDX_LIST_IS_SHOWN=1
VLIST_CURRENT_IDX=1
VLIST_IS_SEARCH_MODE=0
VLIST_SEARCH_BUFFER=""

while (( 1 )); do
    list=( `setopt` )
    list=( "${(@M)list:#*$1*}" )

    if [ "$#list" -eq 0 ]; then
        echo "No matching options"
        break
    fi

    list=( "${(@i)list}" )
    n-list "${list[@]}"

    if [ "$REPLY" -gt 0 ]; then
        selected="$reply[$REPLY]"
        option="${selected%% *}"
        state="${selected##* }"

        # Toggle the option
        if [ "$state" = "on" ]; then
            echo "Setting |$option| to off"
            unsetopt "$option"
        else
            echo "Setting |$option| to on"
            setopt "$option"
        fi
    else
        break
    fi
done

VLIST_REMEMBER_STATE=0

# vim: set filetype=zsh:
