# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v-env` to .zshrc
#
# This function allows to choose an environment variable
# for edition with vared
#
# Uses n-list

emulate -L zsh

zmodload zsh/curses

local IFS="
"

local list
local selected

VLIST_REMEMBER_STATE=0

list=( `env` )
list=( "${(@M)list:#*$1*}" )

if [ "$#list" -eq 0 ]; then
    echo "No matching variables"
    return 1
fi

list=( "${(@i)list}" )
n-list "$list[@]"

if [ "$REPLY" -gt 0 ]; then
    selected="$list[$REPLY]"
    selected="${selected%=*}"
    echo "Editing \`$selected':"
    vared "$selected"
fi

# vim: set filetype=zsh:
