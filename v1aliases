# Copy this file into /usr/share/zsh/[-version-]/functions
# and add 'autoload v1aliases` to .zshrc
#
# This function allows to choose an alias for edition with vared
#
# Uses v1list

emulate -L zsh

zmodload zsh/curses

local IFS="
"

local list
local result
local selected

VLIST_REMEMBER_LIST=0

list=( ${(ki)aliases} )
v1list result "$list[@]"

if [ "$result" -gt 0 ]; then
    selected="$list[$result]"
    echo "Editing \`$selected':"
    vared aliases\[$selected\]
fi

# vim: set filetype=zsh:
